<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarStyle</item>
    </style>

    <style name="ProgressBarStyle" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">

        <item name="android:indeterminateTint">@color/colorAccent</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>

    </style>

</resources>